@model WebAppTacos.Models.Tuotteet
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">


<!-- The Modal -->
<div class="modal fade" id="ModalProductCreate">

    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="Vihreä" class="modal-title">Uuden tuotteen lisääminen</h4>
            </div>

            <div class="modal-body">
                @using (Html.BeginForm("Create", "Tuotteet", FormMethod.Post, new { id = "createForm" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Tuotteet</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nimi, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Nimi, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nimi, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.varMaara,"Varastosaldo", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.varMaara, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.varMaara, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Hinta, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Hinta, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Hinta, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TuoteryhmaID, "Tuoteryhmä", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("TuoteryhmaID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.TuoteryhmaID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                }

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success" form="createForm"><i class="fas fa-plus-square"></i></button>
                    <a href="@Url.Action("Index", "Tuotteet")" class="btn btn-danger"><i class="fas fa-times"></i></a>
                </div>

            </div>
        </div>
    </div>
