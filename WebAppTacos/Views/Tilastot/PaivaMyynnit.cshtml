
@{
    ViewBag.Title = "PaivaMyynnit";
}
@section scripts {
    <script type="text/javascript">
        let labelTexts = [@Html.Raw(ViewBag.viikonPaiva)];
        let dataValues = [@ViewBag.tuoteMyynti];
        var ctx = document.getElementById('barcanvas').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labelTexts,
                datasets: [{
                    label: 'Myyntimäärä euroina päivässä',
                    data: dataValues,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            }
        });
    </script>
}

<h2 id="Vihreä">Tuotteiden myyntimäärät arkisin</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-10">
            <canvas id="barcanvas"></canvas>
        </div>
    </div>
    <a class="btn btn-danger" href="~/Home/Index/">Takaisin etusivulle</a>
    <a class="btn btn-success" href="~/Tilastot/Top10Myynnit/">10 myydyintä tuotetta</a>
</div>


